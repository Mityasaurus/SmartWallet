<UserControl x:Class="SmartWallet.UI.Controls.TotalOutcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartWallet.UI.Controls"
             mc:Ignorable="d">
    <Grid>
        <Border Background="#1D1D41" CornerRadius="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="#6359E9" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Width="40" Height="40" CornerRadius="10" Margin="0 0 24 0">
                    <Image Source="../Images/arrow_outcome.png" Width="15" Height="15"></Image>
                </Border>
                <StackPanel>
                    <TextBlock Text="Total Outcome" Foreground="#8C89B4" FontSize="16"
                               Margin="0 26 0 0"></TextBlock>
                    <TextBlock x:Name="tb_Outcome" Text="632.00" Foreground="White" Margin="0 0 0 34" FontSize="22" FontWeight="Bold"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
